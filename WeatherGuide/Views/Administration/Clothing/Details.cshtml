@model WeatherGuide.Models.Clothing
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = "Details";
}


<div>
    <hr />
    <dl class="row">
         <dt class = "col-sm-2">
            @SharedLocalizer["ClothingNameEN"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameEN)
        </dd>
        <dt class = "col-sm-2">
           @SharedLocalizer["ClothingNameUA"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameUA)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Warmth"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Warmth)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["MoistureResistance"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MoistureResistance)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["SelectCategory"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Id)
        </dd class>
        <dt class = "col-sm-2">
            @SharedLocalizer["ImgData"]
        </dt>
        <dd class = "col-sm-10">
            @{ ViewBag.Image = "data:image/jpg;base64," + Convert.ToBase64String(Model.ImageData); } 
                 <img src="@ViewBag.Image" width="250px" height="200px"/>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@SharedLocalizer["Edit"]</a> |
    <a asp-action="Index">@SharedLocalizer["Back to List"]</a>
</div>
