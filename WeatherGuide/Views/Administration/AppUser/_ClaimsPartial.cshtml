@model WeatherGuide.Models.Claims
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
<form asp-action="ClaimChange">
<div class="form-group">              
                <label class="control-label">@SharedLocalizer["NameId"]</label>
                <input asp-for="ClaimsList[0].Id" name="claimId" class="form-control"disabled />
                <span asp-validation-for="ClaimsList[0].Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["Name"]</label>
                <input asp-for="ClaimsList[0].ClaimValue" name="value" class="form-control" />
                <span asp-validation-for="ClaimsList[0].ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
</form>
