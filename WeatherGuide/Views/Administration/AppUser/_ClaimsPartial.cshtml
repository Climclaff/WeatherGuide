@model WeatherGuide.Models.Claims
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
<form asp-action="ClaimChange">
<label>Name</label>
<div class="form-group">              
                <label asp-for="ClaimsList[0].Id" class="control-label"></label>
                <input asp-for="ClaimsList[0].Id" name="claimId" class="form-control" />
                <span asp-validation-for="ClaimsList[0].Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaimsList[0].ClaimValue" class="control-label"></label>
                <input asp-for="ClaimsList[0].ClaimValue" name="value" class="form-control" />
                <span asp-validation-for="ClaimsList[0].ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
</form>
