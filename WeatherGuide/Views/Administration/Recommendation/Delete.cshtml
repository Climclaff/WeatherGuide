@model WeatherGuide.Models.Recommendation
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = "Delete";
}

<h3>@SharedLocalizer["Are you sure you want to delete this?"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
               @SharedLocalizer["AppUserId"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd class>
        <dt class = "col-sm-2">
            @SharedLocalizer["FirstClothingId"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstClothing.Id)
        </dd class>
        <dt class = "col-sm-2">
            @SharedLocalizer["SecondClothingId"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondClothing.Id)
        </dd class>
        <dt class = "col-sm-2">
            @SharedLocalizer["ThirdClothingId"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ThirdClothing.Id)
        </dd class>
        <dt class = "col-sm-2">
            @SharedLocalizer["DateTime"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@SharedLocalizer["Back to List"]</a>
    </form>
</div>
