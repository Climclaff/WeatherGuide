<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthenticatedActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AuthenticatedActivity">

        <TextView
            android:id="@+id/text_recommendation_humidity"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="54dp"
            android:textColor="#6CF30B"
            app:layout_constraintBottom_toTopOf="@+id/text_recommendation_firstclothing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_recommendation_windspeed" />

        <ImageView
            android:id="@+id/image_recommendation_thirdclothing"
            android:layout_width="201dp"
            android:layout_height="192dp"
            android:layout_marginStart="106dp"
            android:layout_marginEnd="104dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_recommendation_secondclothing"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/image_recommendation_secondclothing"
            android:layout_width="201dp"
            android:layout_height="192dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/image_recommendation_thirdclothing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_recommendation_firstclothing"
            app:layout_constraintTop_toBottomOf="@+id/text_recommendation_today"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/image_recommendation_firstclothing"
            android:layout_width="201dp"
            android:layout_height="192dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/image_recommendation_thirdclothing"
            app:layout_constraintEnd_toStartOf="@+id/image_recommendation_secondclothing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_recommendation_thirdclothing"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_recommendation_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="135dp"
            android:layout_marginBottom="127dp"
            android:text="Weather in your region"
            android:textColor="#150404"
            app:layout_constraintBottom_toTopOf="@+id/text_recommendation_today"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_recommendation_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="106dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="118dp"
            android:text="Your recommendation for today"
            android:textColor="#130303"
            app:layout_constraintBottom_toTopOf="@+id/image_recommendation_secondclothing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_recommendation_weather" />

        <TextView
            android:id="@+id/text_recommendation_temperature"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="10dp"
            android:textColor="#96EC0F"
            app:layout_constraintBottom_toTopOf="@+id/text_recommendation_windspeed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_recommendation_windspeed"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="10dp"
            android:textColor="#86EF0E"
            app:layout_constraintBottom_toTopOf="@+id/text_recommendation_humidity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_recommendation_temperature" />

        <TextView
            android:id="@+id/text_recommendation_firstclothing"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="11dp"
            android:textColor="#170404"
            app:layout_constraintBottom_toTopOf="@+id/text_recommendation_secondclothing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_recommendation_humidity" />

        <TextView
            android:id="@+id/text_recommendation_secondclothing"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="13dp"
            android:textColor="#0B0303"
            app:layout_constraintBottom_toTopOf="@+id/text_recommendation_thirdclothing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_recommendation_firstclothing" />

        <TextView
            android:id="@+id/text_recommendation_thirdclothing"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="21dp"
            android:textColor="#120303"
            app:layout_constraintBottom_toTopOf="@+id/image_recommendation_firstclothing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_recommendation_secondclothing" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>